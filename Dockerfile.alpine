# e.g.: `docker build --rm --build-arg "NODE_VERSION=11.8-alpine" -f ./Dockerfile.alpine .`
ARG NODE_VERSION

FROM node:${NODE_VERSION}

RUN set -x \
    && apk add --no-cache bash git openssh \
    && npm install -g npm \
    && npm cache clean \
    && git --version && bash --version && ssh -V && npm -v && node -v && yarn -v
